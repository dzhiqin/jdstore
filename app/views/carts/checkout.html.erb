<div class="row">
  <div class="col-md-12">
    <h2>购物明细</h2>
    <table class="table">
      <thead>
        <tr>
          <th width="88%">商品</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |ci| %>
          <tr>
            <td><%= link_to ci.product.title,product_path(ci.product) %></td>
            <td><%= ci.product.price %></td>
            <td><%= ci.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right">
        总计: <%= render_cart_total_price(current_cart) %>¥
      </span>
    </div>
    <hr>
    <h2>订单信息</h2>
    <div class="order-form">
      <%= simple_form_for @order do |f| %>
        <legend>订购人</legend>
        <div class="col-lg-6">
          <%= f.input :billing_name %>
        </div>
        <div class="col-lg-6">
          <%= f.input :billing_address %>
        </div>
        <div class="col-lg-6">
          <%= f.input :shipping_name %>
        </div>
        <div class="col-lg-6">
          <%= f.input :shipping_address %>
        </div>
        <div class="checkout">
          <%= f.submit "生成订单",class:"btn btn-lg btn-danger pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
