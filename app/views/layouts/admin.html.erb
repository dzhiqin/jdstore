<!DOCTYPE html>
<html>
  <head>
    <title>Jdstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%= render "common/navbar" %>
        <%= render "common/flashes" %>
        <div class="container">
          <div class="row">
            <div class="col-md-2">
              <ul class="nav nav-pills nav-stacked" style="max-width:300px;">
                <li> <%= link_to 'products',admin_products_path,class:"btn btn-primary" %></li>
                <li><%= link_to 'Orders',admin_orders_path,class:"btn btn-primary" %></li>
              </ul>
            </div>
            <div class="col-md-10">
              <%= yield %>
            </div>

          </div>
        </div>
        <!-- <%= render "common/footer" %> -->
      </div>
    </div>

  </body>
</html>
<script type="text/javascript">
  setTimeout("$('.alert-container').fadeOut('slow')",1500)
</script>
